#include <iostream>
#include <string.h>

using namespace std;

int main()
{
    int angka;

    cout<<"masukkan jumlah Mahasiswa : "; cin>>angka;

    int A[angka];
    string B[angka];
    for (int i=0; i<angka ; i++){
        cout<<"Masukkan NIM ["<<i<<"] = "; cin>>A[i];
        cout<<"Masukkan nama mahasiswa = "; cin>>B[i];
    }


    cout<<"Data Mahasiswa Yang anda masukkan adalah = "<<endl;
    for (int i=0 ; i<angka ; i++) {
    cout<<"NIM"<<"    "<<A[i]<<"       ";
    cout<<B[i]<<endl;
    }

}
